<%- include('header') -%>
    <div class="box" id="heading">
        <h1 style="color: purple;"><%= kindOfDay %>!</h1>
    </div>
        
    <div class="box">
        
        
            
            <% for (var i = 0; i<addTask.length;i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= addTask[i] %></p>
                </div>
            <%    }%>
            
            
        
       
        <form action="/" method="post" class="item">
            <input type="text" name="newToDo" placeholder="New Task" autocomplete="off">
            <button type="submit" value= <%= kindOfDay %> name="list">+</button>
        </form>
    </div>
    
    
<%- include('footer') -%>
